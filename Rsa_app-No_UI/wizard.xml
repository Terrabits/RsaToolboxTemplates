    <fieldpagetitle>RsaToolbox Settings</fieldpagetitle>
    <fields>
        <field mandatory="true" name="APPLICATION_NAME">
            <fieldcontrol class="QLineEdit" validator='^[^"]+$'
                          defaulttext="My RSA App" />
            <fielddescription>Application Name:</fielddescription>
        </field>
        <field mandatory="true" name="APP_FOLDER">
            <fieldcontrol class="QLineEdit" validator='^[^"]+$'
                          defaulttext="My RSA App" />
            <fielddescription>Installation folder name:</fielddescription>
        </field>
        <field mandatory="true" name="LOG_FILENAME">
            <fieldcontrol class="QLineEdit" validator='^[^"]+$'
                          defaulttext="My RSA App Log.txt" />
            <fielddescription>Log filename:</fielddescription>
        </field>
    </fields>
